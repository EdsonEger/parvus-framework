{
    "name": "adrianobnu/parvus-framework",
    "description": "Parvus framework - A small but strong framework",
    "keywords": ["php", "framework", "mvc"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php" : ">=5.3",
        "philo/laravel-blade": "2.*",
        "illuminate/database": "*",
        "phpmailer/phpmailer": "*",
        "symfony/http-foundation" : "2.5.*",
        "filp/whoops": "~1.1"
    },
    "autoload": {
    	"files": [
            "src/helper/Lang.php",
            "src/helper/Debug.php"
        ],
        "psr-0": {
            "": "src/"
        },
        "psr-4": {
	        "Parvus\\": "src/"
        }
    },
    "minimum-stability": "stable",
    "config": {
        "preferred-install": "dist"
    }
}
